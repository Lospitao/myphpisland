
<!DOCTYPE html>

<head>

    <meta charset="UTF-8">

    <title>{% block title %}¡Bienvenido pirata!{% endblock %}</title>
    {% block stylesheets %}


        <!--Jquery,-->

        <script
                src="https://code.jquery.com/jquery-3.5.1.min.js"
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
                crossorigin="anonymous">

        </script>
        <script>
            var API_DOMAIN = 'https://localhost:8001';
        </script>

        <!-- Compiled and minified CSS -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <!-- Compiled and minified JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <!-- Social Media materialize bundle-->
        <link rel="stylesheet" href={{ asset('css/materialize-social.css') }}>
        <!--Font Awesome -->
        <link rel="stylesheet" href="{{ asset('css/font-awesome.css') }}">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <!-- Materialize icons -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!--CSS stylesheet-->

        <link rel="stylesheet" type="text/css" href="{{ asset('css/games.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/chapters.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/katas.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/lessons.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/profilepage.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/base.css') }}">

    {% endblock %}
</head>
<body>

    <div class="base">
        <nav class="menu logged-user">
            <div class="nav-wrapper">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ path('app_login') }}" class="avatar"><img src="/resources/users/{{ app.user.username }}/{{ app.user.profilePic }}" alt=""></a>
                    <ul class="right hide-on-med-and-down">
                        <li><a class="waves-effect waves-light btn" href="{{ path('profile') }}"><i class="material-icons">settings</i></a></li>
                        <li><a class="waves-effect waves-light btn" href="{{ path('app_logout') }}">Salir</a></li>
                    </ul>
                {% else %}
                    {% if app.request.get('_route') == 'register' %}
                        <ul class="right hide-on-med-and-down">
                            <li><a class="waves-effect waves-light btn" href="{{ path('app_login') }}">Iniciar Sesión</a></li>
                        </ul>
                    {% else %}
                        <ul class="right hide-on-med-and-down">
                            <li><a class="waves-effect waves-light btn" href="{{ path('register') }}">Registrarse</a></li>
                        </ul>
                    {% endif %}

                {% endif %}
            </div>
        </nav>
    </div>
    {% for message in app.flashes('success') %}
        <div class="flash alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="flash alert-error">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('notice') %}
        <div class="flash alert-notice">
            {{ message }}
        </div>
    {% endfor %}
{% block body %}

{% endblock %}


{% block javascripts %}{% endblock %}

</body>

