{% extends 'base.html.twig' %}

{% block body %}

    <!DOCTYPE html>
    <html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Stage view</title>
    <!-- Howler CDN Javascript -->
    <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/howler/2.2.1/howler.js'></script>
    <script src={{ asset('js/stageView/stage-ambient-dialog-controls.js') }}></script>
    <link rel="stylesheet" type="text/css" href="{{ asset('css/stagesView.css') }}">
</head>
<body>


<div class="screen">

    <!-- Stage Background Image -->
    <section class="background-image view">
        <div class="stage-view" id="stage-view" data-uuid="{{ stageUuid }}">
            <map name="stageMap">
                <area id="characterOne" href="#" alt="Tutoriales HTML" shape="circle" coords="250,250,80">
            </map>
            <img id="background_image" usemap="#stageMap" alt="Imagen de fondo del escenario" src="/resources/stages/{{ stageUuid }}/background-image.jpeg">
        </div>
    </section>
    <footer class="footer">
        <p>Este es un pie increible.</p>
    </footer>
    <a href="{{ path('next_page') }}" class="waves-effect waves-light btn-large float-right">Siguiente</a>
</div>

</body>
{% endblock %}