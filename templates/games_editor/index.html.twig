{% extends 'base.html.twig' %}



{% block body %}

    <!DOCTYPE html>
    <html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Juego Edit</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript" src="{{ asset('js/gameEdit/game-title-editorPage.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/gameEdit/add-chapter-toGame.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/gameEdit/remove-chapter-fromGame.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/gameEdit/update-available-chapters-and-game-chapters-by-drag-and-drop.js') }}"></script>

</head>
<body>
<div class="screen">
    <!-- Title section -->
    <section class="title card">
        <div class="card-content">
            <textarea id="title" name="game-title" placeholder="Título del juego" data-uuid={{ gameUuid }}></textarea>
        </div>
    </section>
    <!-- List of Chapters section -->
    <section class="available-chapters card">
        <div class="card-content">
            <span class="card-title">Capítulos</span>
            <p>Listado de capítulos disponibles para incluir en el juego</p>
            {% include 'games_editor/components/availableChapters.html.twig' %}
        </div>
    </section>
    <!-- Ordered List of Game Chapters section -->
    <section class="game-chapters card">
        <div class="card-content">
            <span class="card-title">Capítulos del Juego</span>
            <p>Puedes arrastrar los capítulos para cambiar el orden o eliminar un capítulo</p>
            {% include 'games_editor/components/gameChapters.html.twig' %}
        </div>
    </section>
</body>
{% endblock %}